<%- include('../layout/admin/header.ejs') %>

<h2 class="text-center">Admin Home Page</h2>

<h5 class="text-center m-4 text-success"><%= message %></h5>

<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex">
      <a href="/admin/adduser" class="btn btn-secondary mr-3">Add User</a>
      <a href="/admin/logout" class="btn btn-secondary">Logout</a>
    </div>
    <form class="form-inline" action="">
      <div class="input-group">
        <input type="text" placeholder="Search User name, email, mobile" class="form-control bg-dark text-white" name="search">
        <div class="input-group-append">
          <button type="submit" class="btn btn-secondary"><i class="fas fa-search"></i></button>
        </div>
      </div>
    </form>
  </div>
  

  

  <table class="table table-striped table-bordered-rows table-bordered-columns table-bordered table-hover mt-4">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Mobile</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody> 
      <% if (users.length != 0) { %>
        <% for (let i = 0; i < users.length; i++) { %>
          <tr>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].mobile %></td>
            <td>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a href="/admin/edituser?id=<%= users[i]._id %>">
                            <i class="fas fa-pen text-dark"></i>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/deleteuser?id=<%= users[i]._id %>" onclick="return confirm('ARE YOU WANT TO DELETE USER : <%=users[i].name%>')">
                            <i class="fas fa-trash text-danger"></i>
                        </a>
                    </div>
                </div>
            </td>
          </tr>
        <% } %>
      <% } %>
    </tbody>
  </table>
</div>

<script src="https://kit.fontawesome.com/a6f4adbcd9.js" crossorigin="anonymous"></script>
<%- include('../layout/admin/footer.ejs') %>


